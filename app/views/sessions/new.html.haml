=content_for(:title, "Login")
.mat-card
  %h3= "Login"
  = form_for(:session, url: login_url) do |f|

    = f.label :email
    = f.email_field :email, autofocus: true, :class => "text-input"

    = f.label :password 
    = f.password_field :password, :class => "text-input"

    = f.label :remember_me, class: "checkbox inline" do
      = f.check_box :remember_me
      %span.noselect.remember Remember me on this computer

    = f.submit "Log in", class: "form-submit" 
  %p.suggestion New user? #{link_to "Sign up", signup_path}
  %p.suggestion Forgot Password? #{link_to "Reset", new_password_reset_path} 
